@model List<Model.EF.Category>

    <ul>
        @foreach (var item in Model)
        {
            var child = Model.Where(x => x.Id == item.Id);
            var parentClass = child.Count() > 0 ? "class=dropdown-toggle data-toggle=dropdown" : "";
        <li class="dropdown">
            <a href="/Product/@item.Categories-@item.Id" class="dropdown-toggle" data-toggle="dropdown">@item.Categories</a>
            @if (child.Count() > 0)
            {
                <ul class="dropdown-menu">
                    @foreach (var childItem in child)
                    {
                        <li><a href="/Product/@childItem.Categories-@childItem.Id">@childItem.Categories</a></li>
                    }

                </ul>
            }
        </li>
        }
    </ul>

